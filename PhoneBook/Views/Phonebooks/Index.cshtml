@model IEnumerable<PhoneBookNamespace.DAL.Models.Phonebook>

@{
    ViewBag.Title = "Index";
}

<br /><br />

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Phonebook Name
        </th>
        <th> Actions </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.ActionLink(item.PhonebookName, "Details", new { id = item.PhoneBookId, page = 1 })
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.PhoneBookId }) |
                @Html.ActionLink("Details", "Details", new { id = item.PhoneBookId, page = 1 }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.PhoneBookId })
            </td>
        </tr>
    }

</table>
