@model PhoneBookNamespace.DAL.Models.Contact

@{
    ViewBag.Title = "Details";
}

<h2>Contact Details</h2>

<div>    
    <hr />

    <div class="row">
        <div class="col-md-6 col-lg-offset-2">
            <h3>@Html.DisplayFor(model => model.Name) @Html.DisplayFor(model => model.Lastname)</h3>
            <table class="table">
                <tr>
                    <td>Address:</td>
                    <td>@Model.Address</td>
                </tr>
                <tr>
                    <td>Date of Birth:</td>
                    <td>@Model.DateOfBirth.Value.ToString("dd.MM.yyyy")</td>
                </tr>
                @for (int i = 0; i < Model.PhoneNumbers.Count; i++)
                {
                    <tr>
                        <td>Phone number #@(i+1)  </td>
                        <td>@Model.PhoneNumbers.ElementAt(i).Number</td>
                    </tr>
                }
                @Html.ActionLink("Edit", "Edit", "Contacts", new { id = Model.Id }, null) |
                @Html.ActionLink("Delete", "Delete", "Contacts", new { id = Model.Id }, null)

            </table>
        </div>
    </div>
</div>
<p>
    @Html.ActionLink("Back To Phonebook", "Details", "Phonebooks", new { id = Model.PhonebookId }, null)
</p>
